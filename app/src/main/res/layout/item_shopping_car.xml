<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/view_padding8" 
    android:background="@drawable/bg_normal_press_white">
    
    <CheckBox 
        android:id="@+id/cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <ImageView 
        android:id="@+id/img"
        style="@style/ItemShoppingImg" />
    
    <LinearLayout android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/view_padding4">
        
        <TextView 
            android:id="@+id/name"
            style="@style/TvIndexClass"
            android:singleLine="true"/>
        
        <TextView 
            android:id="@+id/price"
            style="@style/TvIndexClass"
            android:singleLine="true"
            android:textColor="@color/main_red"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/jian"
            android:layout_width="@dimen/num"
            android:layout_height="@dimen/num"
            android:background="@drawable/btn_reduction" />

        <EditText
            android:id="@+id/num"
            android:layout_width="@dimen/num"
            android:layout_height="@dimen/num"
            android:layout_marginLeft="4dp"
            android:background="@drawable/bg_et_num"
            android:gravity="center"
            android:inputType="number"
            android:text="@string/one" />

        <Button
            android:id="@+id/add"
            android:layout_width="@dimen/num"
            android:layout_height="@dimen/num"
            android:layout_marginLeft="4dp"
            android:background="@drawable/btn_plus" />
    </LinearLayout>

</LinearLayout>